<% include partials/header%>

<div class="container">
    <div class="row">
        <div class = "col-md-4 mx-auto">
            <div class = "card">
                <div class = "card-body">
                    <form action="/agentSearchDeliveriesReport" method="GET">
                        <div class="form-group">
                            <input type="text", name="idUser", placeholder="Insertar ID Cliente" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="date", name="date1", placeholder="Insertar primera fecha" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="date", name="date2", placeholder="Insertar segunda fecha" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text", name="topic", placeholder="Insertar tema" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text", name="state", placeholder="Insertar estado" class="form-control">
                        </div>
                        <button type= "submit", class="btn btn-info btn-block"> 
                            Buscar 
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class = "col-md-8 mx-auto">
            <table class = "table  table-sm table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID Pedido</th>
                        <th>ID Cliente</th>
                        <th>Fecha de Pedido</th>
                        <th>Libros</th>
                        <th>Total</th>
                        <th>Ubicaci√≥n</th>
                        <th>Fecha de entrega</th>
                        <th>Estado</th>
                        <th>Ver</th>
                    </tr>
                </thead>
                <body>
                    <% for(var i = 0; i < agentDeliveries.length; i++) { %>
                        <tr>
                            <td><%= agentDeliveries[i]._id %></td>
                            <td><%= agentDeliveries[i].idUser %></td>
                            <td><%= agentDeliveries[i].order_date %></td>
                            <td><%= agentDeliveries[i].books.length %></td>
                            <td><%= agentDeliveries[i].total %></td>
                            <td><%= agentDeliveries[i].delivery_location %></td>
                            <td><%= agentDeliveries[i].delivery_date %></td>
                            <td><%= agentDeliveries[i].state %></td>
                            <td>
                                <a href="agentDeliveryDetails/<%= agentDeliveries[i]._id%>" class="btn btn-info">Ver</a>
                            </td>
                        </tr>
                    <% } %> 
                </body>
            </table>
        </div>
    </div>
</div>

<% include partials/footer%>