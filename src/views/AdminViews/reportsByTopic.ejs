<% include partials/header%>

<div class="container">
    <div class="row">
        <div class = "col-md-8 mx-auto">
            <table class = "table  table-sm table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tema</th>
                        <th>Cantidad pedidos</th>
                        <th>Promedio</th>
                    </tr>
                </thead>
                <body>
                    <% for(var i = 0; i < result.length; i++) { %>
                        <tr>
                            <td><%= result[i][0] %></td>
                            <td><%= result[i][1] %></td>
                            <% if(result[i][2]===NaN){ %>
                                <td><%= 0 %></td>
                            <% } else{ %>  
                                <td><%= result[i][2] %></td>
                            <% } %>
                        </tr>
                    <% } %> 
                </body>
            </table>
        </div>
    </div>
</div>
<% include Partials/footer%>