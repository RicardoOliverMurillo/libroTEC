<% include Partials/header%>

<div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/editSale/<%= sale._id %>" method="POST">
                            <div class="form-group">
                                <input type="text" name="idSale" placeholder="Inserte el id de la promoción" class="form-control" value="<%= sale.idSale%>">
                            </div>
                            <div class="form-group">
                                    <input type="text" name="description" placeholder="Inserte la descripción de la promoción" class="form-control" value="<%= sale.description%>">
                            </div>
                            <div class="form-group">
                                    <input type="date" name="init_date" placeholder="Inserte la fecha de inicio" class="form-control" value="<%= sale.init_date%>">
                            </div>    
                            <div class="form-group">
                                    <input type="date" name="finish_date" placeholder="Inserte la fecha de finalización" class="form-control" value="<%= sale.finish_date%>">
                            </div>
                            <div class="form-group">
                                    <input type="text" name="per_disccount" placeholder="Inserte el % de descuento" class="form-control" value="<%= sale.per_disccount%>">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-success btn-block">Modificar Promoción</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        
<% include Partials/footer%>