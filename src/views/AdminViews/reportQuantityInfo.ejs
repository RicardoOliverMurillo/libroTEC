<% include partials/header%>

<div class="container">
    <div class="row">
        <div>
            <form class="form-inline my-2 my-lg-5" action="/deliveriesSearch" method="GET" >
                <input class="form-control mr-sm-10" name="busqueda" type="search" placeholder="Buscar..." aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </form>
        </div>
        <!--LIST-->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                            <th>ID Cliente</th>
                            <th>Cantidad de Pedidos</th>
                    </tr>
                </thead>
                <tbody>
                    <tbody>
                            <% for(var i = 0; i < result.length; i++) { %>
                                <tr>
                                    <td><%= result[i]._id %></td>
                                    <td><%= result[i].count %></td>
                                </tr>
                            <% } %> 
                    </tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>

<% include Partials/footer%>